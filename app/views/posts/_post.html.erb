<article class="post">
	<section class="post-head">
		<h2><%= link_to post.title, post_path(post) %></h2>
		<small>
			<time><%= post.created_at.to_date.strftime("%d %B %Y") %></time>
			 | 
			<%= link_to 'Edit', edit_post_path(post) %>
			 | 
			<%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: 'Delete this post?'} %>
		</small>
	</section>

	<section class="summary clearfix">
		<div class='working'><%= image_tag post.image.url(:thumb), class: 'img-thumbnail  thumb' if post.image? %></div>
		<%= post.summary %>
	</section>
</article>